{
  "name": "nestjs-boilerplate",
  "version": "0.1.1",
  "description": "CRUD Base with multiple tenants support",
  "scripts": {
    "build:dev": "tsc --watch",
    "prepare": "npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"src/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/configs/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/configs/typeorm.config.ts migration:generate ./migrations/$npm_config_name -p && eslint \"migrations/*.ts\" --fix",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./migrations/$npm_config_name && eslint \"migrations/*.ts\" --fix",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/configs/typeorm.config.ts migration:revert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryan2kptit/nestjs-boilerplate"
  },
  "keywords": [
    "Nestjs",
    "CURD",
    "Multiple Tenant"
  ],
  "author": "https://github.com/ryan2kptit",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^6.1.3",
    "@types/node": "^18.11.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.2",
    "generate-template-files": "^3.2.1",
    "install": "^0.13.0",
    "mongodb": "^5.9.2",
    "mongoose": "^8.2.0",
    "nest-winston": "^1.9.4",
    "npm": "^10.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "source-map-support": "^0.5.21",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.3.9",
    "@types/jest": "^29.5.12",
    "typescript": "^4.9.3"
  }
}
